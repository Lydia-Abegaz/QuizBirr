# Production Environment
NODE_ENV=production
PORT=10000

# JWT - REPLACE WITH SECURE RANDOM STRING
JWT_SECRET=your-production-jwt-secret-replace-with-long-random-string-min-32-chars
JWT_EXPIRES_IN=7d

# Database - Render will provide this
DATABASE_URL=postgresql://user:password@host:port/database

# Redis (optional for production)
# REDIS_URL=redis://user:password@host:port

# SMS Provider
SMS_PROVIDER=mock
# For production SMS, uncomment and add real credentials:
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=your-account-sid
# TWILIO_AUTH_TOKEN=your-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# Telebirr API (mock for now)
TELEBIRR_API_KEY=mock-api-key
TELEBIRR_API_URL=https://api.telebirr.com
TELEBIRR_WEBHOOK_SECRET=production-webhook-secret-replace-with-secure-random

# App URLs - UPDATE AFTER DEPLOYMENT
FRONTEND_URL=https://quizzbirr.netlify.app
API_BASE_URL=https://quizbirr-api.onrender.com/api/health
