# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Environment
NODE_ENV=production
PORT=5050

# JWT (CRITICAL: Use a strong, unique secret in production)
JWT_SECRET=your-super-secure-jwt-secret-min-64-characters-long-random-string-here
JWT_EXPIRES_IN=7d

# Database (Use managed PostgreSQL in production)
DATABASE_URL="postgresql://username:password@your-db-host:5432/quizbirr_prod?schema=public"

# Redis (Use managed Redis in production)
REDIS_URL=redis://your-redis-host:6379

# SMS Provider (Choose one)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Provider Option 1: Chapa (Recommended)
CHAPA_SECRET_KEY=your-chapa-secret-key
CHAPA_PUBLIC_KEY=your-chapa-public-key
CHAPA_WEBHOOK_SECRET=your-chapa-webhook-secret
CHAPA_API_URL=https://api.chapa.co/v1

# Payment Provider Option 2: Telebirr
TELEBIRR_API_KEY=your-telebirr-api-key
TELEBIRR_API_URL=https://api.telebirr.com
TELEBIRR_WEBHOOK_SECRET=your-telebirr-webhook-secret
TELEBIRR_MERCHANT_ID=your-merchant-id

# App URLs (Update with your actual domains)
FRONTEND_URL=https://your-domain.com
API_BASE_URL=https://api.your-domain.com

# Security
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info

# File Upload (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
